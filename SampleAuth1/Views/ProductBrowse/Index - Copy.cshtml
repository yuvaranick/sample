

@{
    ViewBag.Title = "Product Browse Page";
}

<div class="text-block-2">Here is your Product Browse Page!!!</div>
<div class="div-block"></div>
<div class="add_remove">
    <a href="#" class="button_remove w-button">x</a>
    <a href="#" class="button_add w-button">+</a>
</div>@*Write a function to update in Database*@

<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval=false>



        <!-- Wrapper for slides -->
        <div class="carousel-inner">
   



            @{ 


                foreach (var item in Model)
                {
                    @*<div class="item">
                        <img src="@item.LargeImage" alt="Product">

                     </div>*@
                    
                        <div class="item active">
                      <img src="@item.LargeImage" alt="Product">
                  
                      </div>
                        
                    

                }
                }

        </div>
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
